- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    = t('admins.partial_breadcrumbs.home')
  span.seperator
    | /
  a href="#{admin_website_path}"
    = t('admins.partial_breadcrumbs.admin')
    
.row
  .col-xs-12
    = render 'admin/tabs'

.panel.panel-default
  .panel-heading
    strong.text-muted
      = t('pages.new.add_page')
  .panel-body
    = render partial: "form", locals: { page: @page }

javascript:
  $('.role-tab').addClass('active');
  $('.categories .website').addClass('active-category');

  $('.form-buttons button.btn.btn-default').on('click', function() {
    location.replace(document.referrer);
  });
