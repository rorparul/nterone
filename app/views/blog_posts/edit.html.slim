- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    | Home
  span.seperator
    | /
  a href="#{my_admin_website_path}"
    | My Admin
    
.row
  .col-xs-12
    = render 'my_admin/tabs'

.panel.panel-default
  .panel-heading
    strong.text-muted Edit Blog Post
  .panel-body
    = render partial: "form", locals: { blog_post: @blog_post }
    
button#back Back

javascript:
  $('.role-tab').addClass('active');
  $('.categories .website').addClass('active-category');
  
  $('#back').on('click', function() {
    location.replace(document.referrer);
  });
