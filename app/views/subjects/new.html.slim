- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    = t('admins.partial_breadcrumbs.home')
  span.seperator
    | /
  a href="#{platforms_path}"
    = t('admins.partial_breadcrumbs.training')
  span.seperator
    | /
  a href="#{platform_path(@platform)}"
    = @platform.title
  span.seperator
    | /
  a href="#{new_platform_subject_path(@platform, @subject)}"
    = t('admins.partial_breadcrumbs.new')

.panel.panel-default
  .panel-heading
    strong.text-muted
      = t('subjects.new.add_certification')
  .panel-body
    = render partial: "form", locals: { platform: @platform, subject: @subject, categories: @categories }

javascript:
  $('.form-buttons button.btn.btn-default').on('click', function() {
    location.replace(document.referrer);
  });
