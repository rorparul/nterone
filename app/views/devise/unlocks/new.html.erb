<h2><%= t('devise.unlocks.title') %></h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.unlocks.button.resend') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
