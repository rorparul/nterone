.panel.panel-default
  .panel-heading
    strong.text-muted
      = t('courses.partial_index.courses')
  .panel-table
    .table-responsive
      table.table.table-condensed.table-hover
        thead
          tr
            th
              = t('courses.partial_index.course_id')
            th
              = t('courses.partial_index.course_title')
            th
              | Upcoming
            th
              | Archived
            th
              | Regions
            th
              | Parent Regions
            th colspan='4'
        tbody#courses
          = render partial: 'courses/courses', locals: { courses: @courses }
  div class="#{'panel-footer' if courses.total_count > 25}"
    #courses-page-control
      = render partial: 'courses/page_controls', locals: { courses: @courses }

javascript:
  $(document).on('change', '.table-select', function() {
    $(this).closest('form').submit();
  });
