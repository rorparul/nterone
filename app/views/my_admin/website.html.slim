- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    | Home
  span.seperator
    | /
  span.text-muted My Admin

.row
  .col-xs-12
    = render 'tabs'

.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        strong.text-muted Static Pages
      .table-responsive
        table.table.table-condensed
          thead
            tr
              th Title
              / th URL
              th
          tbody#pages
            - @static_pages.each do |page|
              tr
                td = page.title
                / td = link_to "#{request.base_url}#{page_path(page)}", page_path(page)
                td.actions-column.fit
                  = link_to "Edit", edit_page_path(page), remote: false

.row
  .col-xs-12
    .panel.panel-default
      .panel-heading
        strong.text-muted Dynamic Pages
        = link_to "Add", new_page_path, remote: false, class: "panel-heading-controls"
      .table-responsive
        table.table.table-condensed
          thead
            tr
              th Title
              th URL
              th
          tbody#pages
            - @dynamic_pages.each do |page|
              tr
                td = page.title
                td = link_to "#{request.base_url}#{page_path(page)}", page_path(page)
                td.actions-column.fit
                  = link_to "Edit", edit_page_path(page), remote: false
                  = " | "
                  = link_to 'Delete', page_path(page), method: :delete, data: { confirm: "Are you sure?" }, class: 'text-danger'

