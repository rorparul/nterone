- unless smart_listing.empty?
  .panel-table
    .table-responsive
      table.table.table-condensed
        thead
          tr
            th.fit = smart_listing.sortable t('orders.partial.listing.label.id'), :id
            th.fit = smart_listing.sortable t('orders.partial.listing.label.status'), :status_position
            th.fit = smart_listing.sortable t('orders.partial.listing.label.total'), :total
            th.fit = smart_listing.sortable t('orders.partial.listing.label.paid'), :paid
            th.fit = smart_listing.sortable t('orders.partial.listing.label.balance'), :balance
            th.fit = smart_listing.sortable t('orders.partial.listing.label.source'), :source
            th.fit = smart_listing.sortable t('orders.partial.listing.label.auth_code'), :auth_code
            th.fit = smart_listing.sortable t('orders.partial.listing.label.credits'), :clc_quantity
            th.fit
              = t 'orders.partial.listing.label.so_num'
            th.fit = smart_listing.sortable t('orders.partial.listing.label.created'), :created_at
            th.fit 
              = t 'orders.partial.listing.label.member_email'
            th.fit
        tbody
          - smart_listing.collection.each do |order|
            tr
              td.fit = order.id
              td.fit
                - if order.status == "Uninvoiced" || order.status == "Unverified SO" || order.status == "Not Charged" || order.status == "Unreviewed"
                  span.label.label-danger = order.status
                - if order.status == "Invoiced" || order.status == "Paid in Partial"
                  span.label.label-warning = order.status
                - if order.status == "Verified SO" || order.status == "Paid in Full" || order.status == "Bundled" || order.status == "No Charge"
                  span.label.label-success = order.status
              td.fit.text-success = "$#{number_with_delimiter(number_with_precision(order.total, precision: 2))}"
              td.fit class="#{'text-success' if order.paid > 0.00}" = "$#{number_with_delimiter(number_with_precision(order.paid, precision: 2))}"
              td.fit class="#{'text-danger' if order.balance > 0.00}" = "$#{number_with_delimiter(number_with_precision(order.balance, precision: 2))}"
              td.fit = order.source
              td.fit = order.auth_code
              td.fit class="#{'text-success' if order.clc_quantity > 0}" = order.clc_quantity
              td.fit = order.clc_number
              td.fit = order.created_at.strftime("%b. %d, %Y %I:%M %p")
              td = order.buyer.email if order.buyer
              td.fit.actions-column.text-right
                = link_to t('generic.action.actions'), edit_order_path(order), remote: true
                |  | 
                = link_to t('generic.action.details'), admin_orders_show_path(order), remote: false
                |  | 
                = link_to t('generic.action.delete'), order_path(order), method: :delete, data: { confirm: t('generic.prompt.confirm_delete') }
  .panel-footer
    = smart_listing.paginate
    = smart_listing.pagination_per_page_links
- else
  .panel-table
    .table-responsive
      table.table.table-condensed
        tbody
          tr
            td.text-center
              = t 'generic.no_records'
