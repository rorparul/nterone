.form-container
  = form_for press_release, remote: false do |f|
    - if press_release.errors.any?
      .alert.alert-danger.alert-dismissible
        button.close type="button" data-dismiss="alert" aria-label="Close"
          span aria-hidden="true" &times;
        h4 = "#{pluralize(press_release.errors.count, 'error')}:"
        ul
          - press_release.errors.full_messages.each do |msg|
            li = msg
            
    .form-group
      = f.label :page_title, 'Page Title'
      = f.text_field :page_title, class: 'form-control input-sm'
    
    .form-group
      = f.label :title, 'Title'
      = f.text_field :title, class: 'form-control input-sm'
          
    .form-group
      = f.label :content
      = f.bootsy_area :content, class: 'form-control input-sm'
      
    .form-buttons
      button.btn.btn-success type="submit" Save
      button.btn.btn-default type="button" data-dismiss="modal" Cancel
      
javascript:
  $(document).on('ready', function() {
    Bootsy.init();
  });
