<%= simple_form_for [forem, :admin, @forum] do |f| %>
  <%= f.association :category, :include_blank => false %>
  <%= f.input :title, t('forem.form.label.title') %>
  <%= f.input :position, t('forem.form.label.position') %>
  <%= f.input :description, t('forem.form.label.description'), :as => :text %>

  <h3><%= t('forem.admin.forum.moderator_groups') %></h3>
  <%= f.association :moderators, :as => :check_boxes %>
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
