<%= simple_form_for [forem, :admin, @topic.forum, @topic] do |f| %>
  <%= f.input :subject, t('forem.form.label.subject') %>
  <%= f.association :forum , :label => "#{t('forem.form.label.forum')}" %>
  <%= f.label :locked, t('forem.form.label.locked') %>
  <%= f.check_box :locked %>
  <%= f.label :pinned, t('forem.form.label.pinned') %>
  <%= f.check_box :pinned %>
  <%= f.label :hidden, t('forem.form.label.hidden') %>
  <%= f.check_box :hidden %>

  <br />
  <%= f.submit :class => "btn btn-primary" %>
<% end %>
