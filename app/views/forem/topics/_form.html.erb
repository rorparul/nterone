<%= simple_form_for [forem, @forum, @topic] do |f| %>
  <%= f.input :subject, wrapper_html: {class: "form-group"}, input_html: { class: "form-control input-sm" } %>

  <%= f.simple_fields_for :posts do |post| %>
    <%= render :partial => "forem/posts/form", :locals => { :f => post }%>
  <% end %>

  <%= f.submit :class => "btn btn-success" %>
<% end %>
