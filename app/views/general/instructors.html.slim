- content_for :page_title do
  = @page.page_title
  
- content_for :page_description do
  = @page.page_description

- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    = t 'breadcrumbs.home'
  span.seperator
    | /
  span.text-muted About Us
    
.row
  .col-xs-12.col-central
    = image_tag 'instructors.png', class: "header-image"
    = render partial: 'layouts/about_us_nav_bar'
        
    .row.instructor-bios
      .col-xs-12
        = @page.content.html_safe
  
  .col-xs-12.side-column
    = render partial: 'layouts/side_column'
    
javascript:
  $('.about-us-tab').addClass('active');
  $('.instructor-bios').addClass('active-category');
