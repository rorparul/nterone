- if items.present?
  - items.each do |item|
    - if item.class == Subject
      - if item.image && item.image.file_url != nil
        .col-xs-12.col-md-6
          = link_to platform_subject_path(item.platform, item), class: 'subject with-image' do
            = image_tag item.image.file_url(:subject_icon)
            p = item.full_title
          - if user_signed_in? && current_user.admin?
            = link_to "Edit", edit_platform_subject_path(item.platform, item), remote: false, class: "platform-item"
      - else
        .col-xs-12.col-md-6
          = link_to platform_subject_path(item.platform, item), class: 'subject without-image' do
            p = item.full_title
          - if user_signed_in? && current_user.admin?
            = link_to "Edit", edit_platform_subject_path(item.platform, item), remote: false, class: "platform-item"
    - elsif item.class == Course
      - if item.image && item.image.file_url != nil
