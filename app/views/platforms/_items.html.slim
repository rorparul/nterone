            p = item.full_title
          - if user_signed_in? && current_user.admin? 
            = link_to "Edit", edit_platform_course_path(item.platform, item), remote: false, class: "platform-item"
    - elsif item.class == VideoOnDemand
      - if item.image && item.image.file_url != nil
        .col-xs-12.col-md-6
          = link_to platform_video_on_demand_path(item.platform, item), class: 'subject with-image' do
            = image_tag item.image.file_url(:subject_icon)
            p = item.full_title
          - if user_signed_in? && current_user.admin? 
            = link_to "Edit", edit_platform_video_on_demand_path(item.platform, item), remote: false, class: "platform-item"
      - else
        .col-xs-12.col-md-6
          = link_to platform_video_on_demand_path(item.platform, item), class: 'subject without-image' do
            p = item.full_title
          - if user_signed_in? && current_user.admin? 
            = link_to "Edit", edit_platform_video_on_demand_path(item.platform, item), remote: false, class: "platform-item"
        
- else
  p.text-center No Matches Found
