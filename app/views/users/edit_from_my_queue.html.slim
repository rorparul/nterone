- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    = t 'breadcrumbs.home'
  span.seperator
    | /
  a href="#{leads_path}"
    | My Queue
  - if @user.full_name
    span.seperator
      | /
    a href="#{user_path(@user)}"
      = @user.full_name

.row#settings
  .col-xs-12
    .group
      .group-heading
        h6 User Info
      .group-body
        = render 'form'

.row#settings
  .col-xs-12
    button#back Back

javascript:
  $('.my-queue-tab').addClass('active');
  
  $('#back').on('click', function() {
    location.replace(document.referrer);
  });
