- content_for :breadcrumbs do
  a href="#{root_path}"
    span.fa.fa-home
    = t('admins.partial_breadcrumbs.home')
  span.seperator
    | /
  span.text-muted
    | My NterOne
  span.seperator
    | /
  span.text-muted
    | Sales
  span.seperator
    | /
  a href="#{leads_users_path}"
    | Leads
  span.seperator
    | /
  span.text-muted
    = @user.full_name.presence || @user.email

= render 'layouts/tabs'

.row
  .col-xs-12 
    h4
      strong.text-muted = @user.full_name.presence || @user.email
    .container-muted
      = link_to t('default.action.edit'), edit_user_path(@user), remote: true, class: 'btn btn-warning btn-sm', role: 'button', style: 'margin-right: 5px;'
      = link_to t('default.action.destroy'), user_path(@user), method: :delete, data: { confirm: t('default.prompt.confirm_delete') }, class: 'btn btn-danger btn-sm pull-right', role: 'button', style: 'margin-right: 5px;'

