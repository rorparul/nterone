coffee:
  $('#yearly_year').change ()->
    year = $('#yearly_year').val()
    window.location = '?date[year]=' + year

  $('#monthly_year, #monthly_month').change ()->
    year = $('#monthly_year').val()
    month = $('#monthly_month').val()
    window.location = '?date[year]=' + year + '&date[month]=' + month

