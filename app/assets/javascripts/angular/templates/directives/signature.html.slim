    br
    form[name="signatureForm"]
      .tab-content
        #signature-basic.tab-pane.fade.in.active role="tabpanel"
          .row
            .col-xs-6
              input-label[type="text" model="name" value=(current_user.try(:full_name)) label=(t('default.label.name'))]
              input-label[type="email" model="email" value=(current_user.try(:email)) label=(t('default.label.email'))]

            .col-xs-6
              input-label[type="text" model="phone" value=(current_user.try(:contact_number)) label=(t('default.label.phone'))]
              input-label[type="text" model="skype" value="" label="Skype"]
              input-label[type="text" model="job_title" value=(current_user.try(:business_title)) label=(t('default.label.job_title'))]
          .row
            .col-xs-12
              / input-label[type="text" model="address" value=(current_user.try(:full_address)) label=(t('default.label.address'))]
              radio-label[type="text" radios="logos" model="logo_url" label="Logo"]

              / textarea-label[model="footer_text" label=(t('default.label.footer_text'))]

        #signature-social.tab-pane.fade role="tabpanel"
          .row
            .col-xs-12
              input-label[model="facebook" label="Facebook" value="https://www.facebook.com/pages/NterOne-Corporation/214212902033061"]
              input-label[model="twitter" label="Twitter" value="https://twitter.com/NterOne"]
              input-label[model="linkedin" label="LinkedIn" value="http://www.linkedin.com/company/nterone"]
              input-label[model="google_plus" label="Google+"]
              input-label[model="youtube" label="Youtube"]
              input-label[model="vimeo" label="Vimeo"]
              input-label[model="instagram" label="Instagram"]

        #signature-links.tab-pane.fade role="tabpanel"
          .row
            .col-xs-12
              input-label[model="link1" label="Link 1" value="http://www.prweb.com/releases/2015/NterOneWinsCiscoAward/prweb12459840.htm"]
              input-label[model="link1_text" label="Link 1 Text" value="Cisco Innovation Award Winner - 1st Quarter, FY 2015"]
